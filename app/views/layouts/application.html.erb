<!DOCTYPE html>
<html>
  <head>
    <title>GossipView</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
       <main role="main">
        <div class="form-inline my-2 my-lg-0">
<!-- Navbar -->
          <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" id="barre">
              <a class="navbar-brand" href="#">
                <strong><i>THP-5</i></strong>
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item active">
<!--Home button-->                  
                    <a class="nav-link" href="/static_pages/index">Home<span class="sr-only">(current)</span></a>
                  </li>
<!--Team button-->                  
                  <li class="nav-item">
                    <a class="nav-link" href="/static_pages/team">Team</a>
                  </li>
<!--Contact button-->                  
                  <li class="nav-item">
                    <a class="nav-link" href="/static_pages/contact">Contact</a>
                  </li>
<!--Create button-->
                  <li class="nav-item">
                    <a class="nav-link" href="<%= new_gossip_path %>">Create Potin</a>
                  </li>
                </ul>
                <form class="form-inline">
                  <div class="md-form my-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                  </div>
                </form>
              </div>
          </nav>
        </main>
      </div>
<!-- Navbar -->
    <%= yield %>
  </body>
</html>
 